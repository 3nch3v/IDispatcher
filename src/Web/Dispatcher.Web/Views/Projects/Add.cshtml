@using Dispatcher.Web.ViewModels.ProjectModels
@model ProjectInputmodel

@{ 
    this.ViewBag.Title = "Add your new project";
}

<div class="col-9 ml-auto mr-auto tm-gold-text shadow p-3 mb-3 bg-white rounded">
    <div class="mb-4">
        <h3>@this.ViewBag.Title</h3>
    </div>

    <div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="tm-gold-text">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole" class="tm-gold-text">Our Role</label>
                <input asp-for="UserRole" class="form-control">
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="tm-gold-text">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="tm-gold-text">Project's URL</label>
                <input asp-for="Url" class="form-control">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <button type="submit" class="tm-btn text-uppercase mt-2 mb-2">Add</button>
        </form>
    </div>
</div>