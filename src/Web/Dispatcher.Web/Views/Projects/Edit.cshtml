@using Dispatcher.Web.ViewModels.ProjectModels
@model EditProjectInputModul

@{
    this.ViewBag.Title = "Edit project";
}

<div style="max-width: 900px; margin: 25px auto;">
    <div class="mb-4">
        <h3>@this.ViewBag.Title</h3>
    </div>
    <div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" class="tm-gold-text">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole" class="tm-gold-text">Our Role</label>
                <input asp-for="UserRole" class="form-control">
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="tm-gold-text">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="tm-gold-text">Project's URL</label>
                <input asp-for="Url" class="form-control">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <button type="submit" class="tm-btn text-uppercase">Safe</button>
        </form>
    </div>
</div>

