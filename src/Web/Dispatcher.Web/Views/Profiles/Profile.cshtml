@using Dispatcher.Web.ViewModels.ProfileModels
@model ProfileViewModel

@{
    this.ViewBag.Title = "Profile";
    var path = Model.ProfilePictures.OrderByDescending(x => x.CreatedOn).FirstOrDefault()?.FilePath;
}
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (path != null) { <img src="@path" alt="Admin" class="rounded-circle" width="150" /> }
                            else { <img src="~/img/3_avatar-512.png" alt="Admin" class="rounded-circle" width="150" /> }
                            <div class="mt-3">
                                <h4>@Model.FullName</h4>
                                @if (@Model.CumstomerReviews.Any())
                                {
                                    <h5><i class="fa fa-star" aria-hidden="true">@Model.CumstomerReviews.Average(x => x.StarsCount).ToString("f2")</i></h5>
                                }

                                <p class="text-secondary mb-1">@Model.Education</p>
                                <p class="text-muted font-size-sm">@Model.ComponyName</p>

                                @*<button class="btn btn-primary">Follow</button>
                                  <button class="btn btn-outline-primary">Message</button>*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h5><i class="fa fa-tasks"> Interests</i></h5>
                            <span class="text-secondary">@Model.Interests</span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">

                        @if (Model.Contacts != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-address-card"> Contact</i></h5>
                                <span class="text-secondary">@Model.Contacts</span>
                            </li>
                        }
                        @if (Model.PhoneNumber != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-phone-square"> Phonenumber</i></h5>
                                <span class="text-secondary">@Model.PhoneNumber</span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">

                        @if (Model.WebsiteUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-internet-explorer"> Website</i></h5>
                                <span class="text-secondary"><a href="#" onclick="window.open('//@Model.WebsiteUrl')">@Model.WebsiteUrl</a></span>
                            </li>
                        }
                        @if (Model.GithubUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-github"> Github</i></h5>
                                <span class="text-secondary"><a href="#" onclick="window.open('//@Model.GithubUrl')">@Model.GithubUrl</a></span>
                            </li>
                        }
                        @if (Model.FacebookUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-facebook"> Facebook</i></h5>
                                <span class="text-secondary"><a href="#" onclick="window.open('//@Model.FacebookUrl')">@Model.FacebookUrl</a></span>
                            </li>
                        }
                        @if (Model.InstagramUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-instagram"> Instagram</i></h5>
                                <span class="text-secondary"><a href="#" onclick="window.open('//@Model.InstagramUrl')">@Model.InstagramUrl</a></span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h5><i class="fa fa-commenting" aria-hidden="true"> Reviews:</i></h5>
                            <br>
                            <a asp-controller="CustomersReviews" asp-action="AllCustomersReviews" asp-route-id="@Model.Id">
                                @Model.CumstomerReviews.Count comments
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h5><i class="fa fa-cube">  Blog posts:</i></h5>
                        </li>

                        @if (Model.Blogs.Count > 0)
                        {
                            @foreach (var blog in Model.Blogs)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <span class="text-secondary"><a asp-controller="Blogs" asp-action="Post" asp-route-id="@blog.Id">@blog.Title</a></span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span class="text-secondary">No blog posts available...</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5>Projects</h5>
                        <hr>
                        @if (Model.Projects.Count > 0)
                        {
                            @foreach (var project in Model.Projects)
                            {
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="mb-0"><a asp-controller="Projects" asp-action="Project" asp-route-id="@project.Id">@project.Name</a></h6>
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                        @project.UserRole
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                        @if (!string.IsNullOrEmpty(project.Url))
                                        {
                                            if (project.Url.Length < 18) {<a href="@project.Url">@project.Url</a> }
                                            else { <a href="@project.Url">@project.Url.Substring(0, 18)</a>}
                                        }
                                    </div>
                                </div>
                                <hr>
                            }
                        }
                        else
                        {
                            <span class="text-secondary">No projects available...</span>
                        }
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5>Advertisements</h5>
                        <hr>
                        @if (Model.Advertisements.Count > 0)
                        {
                            @foreach (var advertisement in Model.Advertisements)
                            {
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="mb-0"><a asp-controller="Ads" asp-action="Ad" asp-route-id="@advertisement.Id">@advertisement.Title</a></h6>
                                    </div>

                                    <div class="col-sm-5 text-secondary">
                                        @if (advertisement.Description.Length < 26)
                                        {@advertisement.Description }
                                    else
                                    { @advertisement.Description.Substring(0, 23) <text>...</text>}
                                    </div>

                                    <div class="col-sm-2 text-secondary">
                                        @advertisement.Compensation
                                    </div>

                                </div>
                                <hr>
                            }
                        }
                        else
                        {
                            <span class="text-secondary">No advertisements available...</span>
                        }

                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5>Job Advertisements</h5>
                                <hr>
                                <h6 class="d-flex align-items-center mb-3"></h6>
                                @if (Model.Jobs.Count > 0)
                                {
                                    @foreach (var job in Model.Jobs)
                                    {
                                        <small><a asp-controller="Jobs" asp-action="Job" asp-route-id="@job.Id">@job.Title</a></small>
                                        <hr>
                                    }
                                }
                                else
                                {
                                    <span class="text-secondary">No job ads available...</span>
                                }

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5>Forum Discussions</h5>
                                <hr>
                                <h6 class="d-flex align-items-center mb-3"></h6>

                                @if (Model.Discussions.Count > 0)
                                {
                                    @foreach (var discussion in Model.Discussions)
                                    {
                                        <small><a asp-controller="Forum" asp-action="ForumDiscussion" asp-route-id="@discussion.Id">@discussion.Title</a></small>
                                        <hr>
                                    }
                                }
                                else
                                {
                                    <span class="text-secondary">No discussions available...</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>