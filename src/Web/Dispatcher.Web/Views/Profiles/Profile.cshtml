@using Dispatcher.Web.ViewModels.ProfileModels
@model ProfileViewModel

<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.FullName</h4>
                                <p class="text-secondary mb-1">@Model.Education</p>
                                <p class="text-muted font-size-sm">@Model.ComponyName</p>

                                @*<button class="btn btn-primary">Follow</button>
                                    <button class="btn btn-outline-primary">Message</button>*@

                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h5><i class="fa fa-tasks"> Interests</i></h5>
                            <span class="text-secondary">@Model.Interests</span>
                        </li>
                    </ul>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">

                        @if (Model.Contacts != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-address-card"> Contact</i></h5>
                                <span class="text-secondary">@Model.Contacts</span>
                            </li>
                        }
                        @if (Model.PhoneNumber != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-phone-square"> Phonenumber</i></h5>
                                <span class="text-secondary">@Model.PhoneNumber</span>
                            </li>
                        }
                    </ul>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">

                        @if (Model.WebsiteUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-internet-explorer"> Website</i></h5>
                                <span class="text-secondary"><a href="@Model.WebsiteUrl">@Model.WebsiteUrl</a></span>
                            </li>
                        }
                        @if (Model.GithubUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-github"> Github</i></h5>
                                <span class="text-secondary"><a href="@Model.GithubUrl">@Model.GithubUrl</a></span>
                            </li>
                        }
                        @if (Model.FacebookUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-facebook"> Facebook</i></h5>
                                <span class="text-secondary"><a href="@Model.FacebookUrl">@Model.FacebookUrl</a></span>
                            </li>
                        }
                        @if (Model.InstagramUrl != null)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5><i class="fa fa-instagram"> Instagram</i></h5>
                                <span class="text-secondary"><a href="@Model.InstagramUrl">@Model.InstagramUrl</a></span>
                            </li>
                        }
                    </ul>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h5><i class="fa fa-cube">  Blog posts:</i></h5>
                        </li>

                        @foreach (var blog in Model.Blogs)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span class="text-secondary"><a asp-controller="Blogs" asp-action="Post" asp-route-id="@blog.Id">@blog.Title</a></span>
                            </li>
                        }
                    </ul>
                </div>

            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <h3>Projects</h3>
                        <hr>
                        @foreach (var project in Model.Projects)
                        {
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0"><a asp-controller="Projects" asp-action="Project" asp-route-id="@project.Id">@project.Name</a></h6>
                        </div>
                        <div class="col-sm-3 text-secondary">
                            @project.UserRole
                        </div>
                        <div class="col-sm-3 text-secondary">
                            @if (project.Url.Length < 18)
                            {<a href="@project.Url">@project.Url</a> }
                        else
                        { <a href="@project.Url">@project.Url.Substring(0, 18)</a>}
                        </div>

                        <div class="col-sm-2 text-secondary">
                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id" title="Edit" style="background-color:#FFFFFF;color:#000000;text-decoration:none">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" title="Delete" style="background-color:#FFFFFF;color:#000000;text-decoration:none">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                   
                    </div>
                            <hr>
                        }

                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" asp-controller="Projects" asp-action="Add">Add Project</a>
                            </div>
                        </div>
                    </div>
                  
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h3>Advertisements</h3>
                        <hr>
                        @foreach (var advertisement in Model.Advertisements)
                        {
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">@advertisement.Title</h6>
                                </div>

                                <div class="col-sm-5 text-secondary">
                                    @if (advertisement.Description.Length < 26)
                                    {@advertisement.Description }
                                else
                                { @advertisement.Description.Substring(0, 23) <text>...</text>}
                                </div>

                                <div class="col-sm-2 text-secondary">
                                    @advertisement.Compensation
                                </div>

                                <div class="col-sm-1 text-secondary">

                                    @*TODO !!!!!!!!!!!!!!!!!!*@

                                    <a asp-controller="Forum" asp-action="Delete" asp-route-id="" title="Delete" style="background-color:#FFFFFF;color:#000000;text-decoration:none">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                            <hr>
                        }

                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                Kenneth Valdez
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                fip@jukmuh.al
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                (239) 816-9029
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                (320) 380-4539
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                Bay Area, San Francisco, CA
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Project Status</h6>
                                <small>Web Design</small>
                                <div class="progress mb-3" style="height: 5px">
