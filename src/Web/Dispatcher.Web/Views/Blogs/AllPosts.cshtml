@using Dispatcher.Common
@model Dispatcher.Web.ViewModels.BlogModels.AllBlogPostsViewModel

@{ 
    this.ViewBag.Title = "Blog Posts";
    this.ViewData["Location"] = "Blogs";
}

<div style="max-width: 1200px; margin: 20px auto;">
    <nav class="navbar navbar-light bg-transparent justify-content-between">
        <div class="navbar-brand">
            <h3 class="tm-gold-text">
                <a class="tm-gold-text" asp-controller="Blogs" asp-action="AllPosts">@this.ViewBag.Title</a>
            </h3>
        </div>
        <a asp-controller="Blogs" asp-action="Create" type="button" class="btn btn-outline-secondary">Creat New Post</a>
    </nav>
    <div class="main-wrapper">
        <section class="blog-list px-3 py-5 p-md-5">
            <div class="container">
                @foreach (var post in Model.Posts)
                {
                    <div class="item mb-5">
                        <div class="media">
                            @if (!string.IsNullOrWhiteSpace(post.FilePath))
                            {
                                <div>
                                    <img class="mr-4 img-fluid post-thumb d-none d-md-flex" src="@Url.Content(post.FilePath)" alt="image" style="width: 200px; max-height: 200px;">
                                </div> 
                            }
                            else if (post.VideoLink != null)
                            {
                               <div>
                                   <img class="mr-4 img-fluid post-thumb d-none d-md-flex" src="~/img/blog-pictures/video-default-icon.png" alt="image" style="width: 200px; max-height: 200px;">
                               </div> 
                            }
                            else
                            {
                               <div>
                                  <img class="mr-4 img-fluid post-thumb d-none d-md-flex" src="~/img/blog-pictures/blog-post-default-pic.jpg" alt="image" style="width: 200px; max-height: 200px;">
                               </div>
                            }
                            <div class="media-body">
                               <h3 class="title mb-1">
                                   <a class="tm-gold-text" asp-action="Post" asp-route-id="@post.Id">@post.Title</a>
                               </h3>
                               <div class="meta mb-1">
                                   <span class="date">@post.CreatedOn.ToString("g")</span>
                               </div>
                              @if (post.ClearBody.Length > 300)
                               {
                                   <div class="intro">@post.ClearBody.Substring(0, 300) ...</div> 
                               }
                               else
                               {
                                   <div class="intro">@post.ClearBody</div>
                               }
                               <a asp-action="Post" asp-route-id="@post.Id" class="tm-gold-text">Read more →</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <br>
            <partial name="_PaginationPartial" view-data="this.ViewData"/>
        </section>
    </div>
</div>