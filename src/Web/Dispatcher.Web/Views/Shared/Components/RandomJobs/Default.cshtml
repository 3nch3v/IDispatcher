@model Dispatcher.Web.ViewModels.ViewComponents.RandomJobsModel

<div class="row justify-content-md-center">
    @foreach (var job in Model.Jobs)
    {
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a asp-controller="Jobs" asp-action="Job" asp-route-id="@job.Id">@job.Title</a></h5>
                    <p class="card-text">@job.JobBody.Substring(0, 50) ...</p>
                    <p class="card-text">@job.Location</p>
                    @job.CreatedOn.ToString("dd-MM-yyyy")
                </div>
            </div>
        </div>
    }
</div>