@using Dispatcher.Web.ViewModels.ForumModels
@model SingleForumDiscussionsViewModel

@{
    this.ViewData["Title"] = "Forum Discussions";
}


<nav class="navbar navbar-light bg-transparent justify-content-between">
    <div class="navbar-brand"><h3 class="tm-gold-text">@this.ViewData["Title"]</h3></div>
    <a asp-controller="Forum" asp-action="Create" type="button" class="btn btn-outline-secondary">Start Discussion</a>
</nav>

<section class="tm-section">
    <div class="container-fluid">
        <div class="row">

            <aside class="col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 tm-aside-r">

                <div class="tm-aside-container">
                    <h3 class="tm-gold-text tm-title">
                        Categories
                    </h3>
                    <nav>
                        <ul class="nav">
                            <li><a href="#" class="tm-text-link">Lorem ipsum dolor sit</a></li>
                            <li><a href="#" class="tm-text-link">Tincidunt non faucibus placerat</a></li>
                            <li><a href="#" class="tm-text-link">Vestibulum tempor ac lectus</a></li>
                            <li><a href="#" class="tm-text-link">Elementum egestas dui</a></li>
                            <li><a href="#" class="tm-text-link">Nam in augue consectetur</a></li>
                            <li><a href="#" class="tm-text-link">Fusce non turpis euismod</a></li>
                            <li><a href="#" class="tm-text-link">Text Link Color #006699</a></li>
                        </ul>
                    </nav>
                    <hr class="tm-margin-t-small">
                    <h3 class="tm-gold-text tm-title tm-margin-t-small">
                        Useful Links
                    </h3>
                    <nav>
                        <ul class="nav">
                            <li><a href="#" class="tm-text-link">Suspendisse sed dui nulla</a></li>
                            <li><a href="#" class="tm-text-link">Lorem ipsum dolor sit</a></li>
                            <li><a href="#" class="tm-text-link">Duiss nec purus et eros</a></li>
                            <li><a href="#" class="tm-text-link">Etiam pulvinar et ligula sed</a></li>
                            <li><a href="#" class="tm-text-link">Proin egestas eu felis et iaculis</a></li>
                        </ul>
                    </nav>
                    <hr class="tm-margin-t-small">

                </div>
            </aside>

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9 col-xl-9">

                <div>
                

                    <div class="card mb-1 col-md-12 offser-md-6">
                        <div class="card-body p-2 p-sm-3">
                            <div class="media forum-item">

                                @*<a asp-controller="USer" asp-action="UserProfile" asp-route-id="@Model.UserId">*@
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="50" alt="User" />
                                @*</a>*@

                                <div class="media-body">
                                    <h6><strong>@Model.Title</strong></h6>
                                    <p class="text-secondary">@Html.Raw(Model.SanitizedDescription)</p>
                                    <p><span class="text-secondary font-weight-bold">@Model.Posts.Count() replies</span></p>

                                    <div class="d-flex flex-row justify-content-between">
                                        <span>@Model.CreatedOn.ToString("g")</span>

                                        <div class="text-muted small text-center align-self-center">
                                            <span class="d-none d-sm-inline-block">
                                                <i class="fa fa-thumbs-up" aria-hidden="true"></i> @Model.LikesCount
                                            </span>
                                            <span>
                                                <i class="fa fa-thumbs-down" aria-hidden="true"></i> 3 @*dislikes*@
                                            </span>
                                        </div>

                                        <span>
                                            @if (Model.IsSolved)
                                            {<text>Solved</text> }
                                        else
                                        { <text>In Progress</text>}
                                        </span>
                                    </div>
                                </div>

                              

                            </div>
                        </div>
                    </div>


                    @foreach (var post in Model.Posts)
                    {

                        <div class="card mb-1 col-md-12 offser-md-6">
                            <div class="card-body p-2 p-sm-3">
                                <div class="media forum-item">

                                    @*<a asp-controller="USer" asp-action="UserProfile" asp-route-id="@Model.UserId">*@
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="50" alt="User" />
                                    @*</a>*@

                                    <div class="media-body">
                                        <p class="text-secondary">@Html.Raw(post.SanitizedContent)</p>
                                        <span>@post.CreatedOn.ToString("g")</span>
                                    </div>

                                    <div class="text-muted small text-center align-self-center">
                                        <span class="d-none d-sm-inline-block">
                                            <i class="fa fa-thumbs-up" aria-hidden="true"></i> @post.LikesCount
                                        </span>
                                        <span>
                                            <i class="fa fa-thumbs-down" aria-hidden="true"></i> 3 @*dislikes*@
                                        </span>
                                    </div>

                                </div>
                            </div>
                        </div>

                    }



                </div>

                <div class="form-control-plaintext">
                    <form method="post" asp-controller="Forum" asp-action="Comment" class="col-md-12 offser-md-6">
                        <div class="form-group">
                            <label for="Comment">Comment</label>
                            <textarea name="Content" class="form-control" rows="3"></textarea>
                        </div>
                        <input name="DiscussionId" value="@Model.Id" type="hidden">
                        <button type="submit" class="btn btn-outline-secondary" style="float: right;">Comment</button>
                    </form>
                </div>

            </div>

        </div>

    </div>

</section>
