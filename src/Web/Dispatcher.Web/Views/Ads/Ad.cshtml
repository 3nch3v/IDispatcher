@model Dispatcher.Web.ViewModels.AdModels.AdViewModel
@using Dispatcher.Data.Models
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userManager

@{
    this.ViewBag.Title = "Ad Info";
    string currUserId = this.userManager.GetUserId(this.User);
}

<div>
    <div class="d-flex justify-content-between">
        <div class="navbar-brand">
            <h3 class="tm-gold-text">
                <a class="tm-gold-text" asp-controller="Ads" asp-action="AllAds">
                    <i class="fa fa-arrow-left"></i> Back to the Ads
                </a>
            </h3>
        </div>
        @if (currUserId == Model.UserId)
        {
            <div>
                <a asp-controller="Ads" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit</a>
                <a asp-controller="Ads" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-secondary" style="margin-left: 20px; margin-right: 60px;">Delete</a>
            </div>
        }
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9 col-xl-9">
                <div class="ad-info-container">
                    <div style="margin: 15px 0px;">
                        <h3 class="tm-gold-text">@Model.Title</h3>
                    </div>
                    <div>
                        @if (!string.IsNullOrWhiteSpace(Model.PictureUrl))
                        {
                            <a href="@Model.PictureUrl">
                                <img src="@Model.PictureUrl" alt="Image" class="img-fluid" style="float:left; margin-right: 20px;" width="250">
                            </a>
                        }
                        <div>
                            <p style="text-align: justify;">@Html.Raw(Model.SanitizedDescription)</p>
                        </div>
                    </div>
                    <hr>
                    <div>
                        <div class="d-flex justify-content-between">
                            <div>Compensation: <strong>@Model.Compensation</strong></div>
                            <div>by <a class="tm-gold-text" asp-controller="Profiles" asp-action="Profile" asp-route-userId="@Model.UserId">@Model.UserUsername</a></div>
                        </div>
                        <div class="d-flex justify-content-between" style="margin-top: 5px;">
                            <div><strong>Looking for: @Model.AdvertisementTypeType</strong></div>
                            <div>Created on @Model.CreatedOn.ToString("d")</div>
                        </div>
                        <hr class="tm-margin-t-small">
                    </div>
                </div>
                <div class="card-deck">
                    <vc:random-ads ads-count="3"></vc:random-ads>
                </div>
            </div>
            <partial name="_AdvertisementsSideBarPartial" />
        </div>
    </div>
</div>


