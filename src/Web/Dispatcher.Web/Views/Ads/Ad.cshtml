@model Dispatcher.Web.ViewModels.AdModels.SingleAdViewModel

@{
    this.ViewData["Title"] = "Ad Info";
}

<h1>@this.ViewData["Title"]</h1>

<a asp-controller="Ads" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit</a>
<a asp-controller="Ads" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Delete</a>

<img src="@Model.PictureUrl" alt="@Model.Title" class="card-img-top">

<p>@Model.Title</p>

<p>@Model.AdvertisementTypeType</p>

<p>@Html.Raw(Model.SanitizedDescription)</p>

<p>@Model.Compensation</p>

<p>@Model.UserUsername</p>

<p>@Model.CreatedOn</p>