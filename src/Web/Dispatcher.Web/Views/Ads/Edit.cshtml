@using Dispatcher.Web.ViewModels.AdModels

@model EditAdViewModel

@{
    this.ViewBag.Title = "Edit your ad";
}

<div class="edit-ab-main" style="max-width: 900px; margin: 30px auto; padding: 30px; border-radius: 10px; background: #F9FCFF; -webkit-box-shadow: -3px 0px 33px 6px rgba(0,0,0,0.17); box-shadow: -3px 0px 33px 6px rgba(0,0,0,0.17); ">
    <div style="margin-bottom:20px; margin-left: 10px;">
        <h3>@this.ViewBag.Title</h3>
    </div>
    <div>
        <form method="post" asp-controller="Ads" asp-action="Edit" class="col-md-12 offser-md-8">
            <div class="form-group">
                <label asp-for="AdvertisementTypeId">Looking for</label>
                <select class="form-control-sm" asp-for="AdvertisementTypeId" asp-items="Model.AdTypes.Select(t => new SelectListItem(t.Type, t.Id.ToString()))"></select>
                <span asp-validation-for="AdvertisementTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" required>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="10" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Compensation">Compensation</label>
                <input asp-for="Compensation" class="form-control" required>
                <span asp-validation-for="Compensation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUrl">Picture URL</label>
                <input asp-for="PictureUrl" class="form-control">
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="tm-btn text-uppercase">Save</button>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/js/tinymce-init.js" type="text/javascript"></script>
}
